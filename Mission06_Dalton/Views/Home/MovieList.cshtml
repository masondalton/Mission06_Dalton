*@

@{
}
@model List<Movie>

<table class="table-bordered">
    <thead class="table-header">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Copied to Plex</td>
            <td>Notes</td>
        </tr>
    </thead>
    
    @foreach (var movie in Model)
    {
        <tr>
            <tbody>
            <td>@movie.Title</td>
            <td>@movie.Category.CategoryName</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@(movie.Edited ? "Yes" : "No")</td>
            <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
            <td>@movie.Notes</td>

            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a></td>
            </tbody>
        </tr>

    }
</table>
